{
  "name": "eiko-habits",
  "private": true,
  "scripts": {
    "dev:api": "turbo run dev --filter=@eiko/api",
    "dev:web": "turbo run dev --filter=@eiko/web",
    "dev:mobile": "turbo run dev --filter=@eiko/mobile",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:migrate": "pnpm --filter @eiko/api exec prisma migrate dev",
    "db:push": "pnpm --filter @eiko/api exec prisma db push",
    "db:seed": "pnpm --filter @eiko/api exec prisma db seed",
    "db:studio": "pnpm --filter @eiko/api exec prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "prettier": "^3.4.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
